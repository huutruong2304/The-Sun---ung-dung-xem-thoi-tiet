<body>
    <div class="spinner-area spinner-active bg-light">
        <div class="spinner-border text-dark" role="status" style="width: 5em; height: 5em;">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    {{>header}}
    <!-- search bar -->
    <div class="container p-2">
        <form class="row" id='search-form'>
            <div class="col-4 text-right">
                <button class="btn btn-light" id='btn-auto-loc'><i class="fas fa-location-arrow"></i></button>
            </div>
            <div class="col-4"><input type="text" class="form-control text-center" id='search-input'></div>
            <div class="col-4">
                <button class="btn btn-light" id='btn-search' type="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>

    </div>

    <!-- display info weather -->
    <div class="container-fluid mt-4">
        <div class="row location-area">
            <div class="col-1"></div>
            <div class="col p-0">
                <h2 id='location'>&nbsp;</h2>
                <h4 id='date-time'><span id="date">&nbsp;</span>&nbsp;&nbsp;<span id="time">&nbsp;</span></h4>
            </div>
        </div>
        <div class="row mt-3 date-area">
            <!-- widget today's weather area -->
            <div class="col-1"></div>
            <div class="col-4">
                <div class="row">
                    <div class="dcol shadow-lg p-3 mb-2 bg-white rounded">
                        <h5 class="title-widget">AIR</h5>
                        <p class="content-widget"><span id="main-air">&nbsp;</span> &deg;C
                            <img src="assets/kindweather/365220-weather-forecast/021-sun.png" class="ml-4" width="45"
                                id='icon-air' height="45">
                        </p>
                    </div>
                    <div class="dcol shadow-lg p-3 mb-2 bg-white rounded">
                        <h5 class="title-widget">WIND SPEED</h5>
                        <p class="content-widget"><span id="main-wind">&nbsp;</span> m/s
                            <img src="assets/kindweather/details/wind.png" class="ml-4" width="45" height="45">
                        </p>
                    </div>
